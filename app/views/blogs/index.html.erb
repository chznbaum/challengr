<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<%= will_paginate %>

<% @blogs.each do |blog| %>
  <section>
    <h2><%= link_to blog.title, blog_path(blog) %></h2>
    <p>Posted by <%= link_to blog.user.username, blog.user %> at <%= blog.created_at %></p>
    <p>Category: <%= blog.topic.title %></p>
    <p><%= link_to blog.status, toggle_status_blog_path(blog) %></p>
    <p><%= blog.body %></p>
    <p><%= link_to 'Show More', blog %></p>
    <p><%= link_to 'Edit Post', edit_blog_path(blog) %></p>
    <p><%= link_to 'Delete Post', blog, method: :delete, data: { confirm: 'Are you sure you want to delete this blog post?' } %></p>
  </section>
<% end %>

<%= will_paginate %>

<br>

<%= link_to 'New Post', new_blog_path %>
