<% provide(:title, @title) %>
<section class="user_info">
    <h1><%= @user.name %></h1>
    <%= link_to "view my profile", @user %>
</section>
<section class="stats">
    <%= render 'shared/stats' %>
</section>
<h3><%= @title %></h3>
<% if @users.any? %>
    <ul class="users follow">
        <%= render @users %>
    </ul>
    <%= will_paginate %>
<% end %>