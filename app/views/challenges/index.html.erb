<p id="notice"><%= notice %></p>

<h1>Challenges</h1>

<% @challenges.each do |challenge| %>
  <section>
    <h2><%= link_to challenge.name, challenge_path(challenge) %></h2>
    <%= image_tag challenge.thumb_image %>
    <p><%= challenge.description %></p>
    <p><%= link_to 'Show More', challenge %></p>
    <p><%= link_to 'Edit Challenge', edit_challenge_path(challenge) %></p>
    <p><%= link_to 'Delete Challenge', challenge, method: :delete, data: { confirm: 'Are you sure you want to delete this challenge?' } %></p>
  </section>
<% end %>

<br>

<%= link_to 'New Challenge', new_challenge_path %>
