<p id="notice"><%= notice %></p>

<%= image_tag @challenge.main_image %>
<h1><%= @challenge.name %></h1>
<p><%= @challenge.description %></p>
<p><%= link_to 'Join Challenge', @challenge.register_link %></p>
<p><%= link_to 'View Challenge Homepage', @challenge.official_link %></p>
<p><%= link_to "Edit Challenge", edit_challenge_path(@challenge.id) %></p>
<p><%= link_to 'Delete Challenge', @challenge, method: :delete, data: { confirm: 'Are you sure you want to delete this challenge?' } %></p>
<p><%= link_to 'Back to Challenges', challenges_path %></p>