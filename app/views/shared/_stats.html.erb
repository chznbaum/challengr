<% if current_user %>
<div class="stats">
    <a href="<%= following_user_path(current_user.id) %>">
        <strong id="following" class="stat">
            <%= current_user.following.count %>
        </strong>
         following
    </a>
    <a href="<%= followers_user_path(current_user.id) %>">
        <strong id="followers" class="stat">
            <%= current_user.followers.count %>
        </strong>
        followers
    </a>
</div>
<% end %>