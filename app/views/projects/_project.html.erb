<section>
    <h2><%= link_to project.title, [project.user, project] %></h2>
    <p><%= project.subtitle %></p>
    <p>Updated by <%= link_to project.user.username, project.user %> at <%= project.updated_at %></p>
    <%= image_tag project.thumb_image %>
    <p><%= project.description %></p>
    <p><%= link_to 'Show More', [project.user, project] %></p>
    <p><%= link_to 'Edit Project', [:edit, project.user, project] %></p>
    <p><%= link_to 'Delete Project', [project.user, project], method: :delete, data: { confirm: 'Are you sure you want to delete this project?' } %></p>
</section>