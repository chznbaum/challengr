<p id="notice"><%= notice %></p>

<%= image_tag @project.main_image %>
<h1><%= @project.title %></h1>
<p><em><%= @project.subtitle %></em></p>
<p><%= @project.description %></p>
<p><%= link_to 'View Live', @project.view_link %></p>
<p><%= link_to 'View Source', @project.source_link %></p>
<p><%= link_to "Edit Project", edit_project_path(@project.id) %></p>
<p><%= link_to 'Delete Project', @project, method: :delete, data: { confirm: 'Are you sure you want to delete this project?' } %></p>
<p><%= link_to 'Back to Projects', projects_path %></p>