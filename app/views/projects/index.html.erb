<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<% @projects.each do |project| %>
  <section>
    <h2><%= link_to project.title, project_path(project) %></h2>
    <p><%= project.subtitle %></p>
    <%= image_tag project.thumb_image %>
    <p><%= project.description %></p>
    <p><%= link_to 'Show More', project %></p>
    <p><%= link_to 'Edit Project', edit_project_path(project) %></p>
    <p><%= link_to 'Delete Project', project, method: :delete, data: { confirm: 'Are you sure you want to delete this project?' } %></p>
  </section>
<% end %>

<br>

